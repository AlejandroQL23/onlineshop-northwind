@model ShippingDetailViewModel
@{
    ViewData["Title"] = "Cart Complete";
}

<h4 class="mb-4">Complete</h4>

@if (TempData["message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["message"]
    </div>
}

<form asp-action="Complete" method="post">
    <div class="form-group row my-2">
        <label asp-for="ShippingDetails.FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ShippingDetails.FirstName">
            <span asp-validation-for="ShippingDetails.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-2">
        <label asp-for="ShippingDetails.LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ShippingDetails.LastName">
            <span asp-validation-for="ShippingDetails.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-2">
        <label asp-for="ShippingDetails.Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ShippingDetails.Address">
            <span asp-validation-for="ShippingDetails.Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-2">
        <label asp-for="ShippingDetails.City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ShippingDetails.City">
            <span asp-validation-for="ShippingDetails.City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-2">
        <label asp-for="ShippingDetails.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ShippingDetails.Email">
            <span asp-validation-for="ShippingDetails.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-2">
        <label asp-for="ShippingDetails.Age" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ShippingDetails.Age">
            <span asp-validation-for="ShippingDetails.Age" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-2">
        <label class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="submit" class="btn btn-sm btn-success btn-block" value="Complete Shopping" />
        </div>
    </div>
</form>

