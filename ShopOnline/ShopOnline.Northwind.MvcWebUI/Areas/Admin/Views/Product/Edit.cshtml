@model ProductViewModel
@{
    ViewData["Title"] = "Edit";
}

<h4 class="h4 my-3">Edit a product</h4>

<form asp-controller="Product" asp-action="Edit" method="post">
    @await Html.PartialAsync("_AddOrUpdate", Model)
    <input type="submit" value="Update Product" class="btn btn-sm btn-success" />
</form>