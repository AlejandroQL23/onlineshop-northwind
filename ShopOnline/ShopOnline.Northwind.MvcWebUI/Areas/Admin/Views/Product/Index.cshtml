@model ProductListViewModel
@{
    ViewData["Title"] = "Admin - Product List";
}

<h4 class="h4 mt-3">Product List</h4>

<a class="btn btn-sm btn-success float-right" asp-controller="Product" asp-action="Add">add a new product</a>

<table class="table">
    <caption>List of products</caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Units In Stock</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <th scope="row">@product.ProductId</th>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td>
                    <a class="btn btn-sm btn-info"
                       asp-action="Edit"
                       asp-route-productId="@product.ProductId">Update</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-danger"
                       asp-action="Delete"
                       asp-route-productId="@product.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>